<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/password_forget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset password"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>
    <View
        android:id="@+id/divider"
        android:layout_width="250dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/black"
        android:layout_below="@id/password_forget_title"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/forget_border"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/divider"
        android:layout_centerHorizontal="true"
        android:background="@drawable/form_border"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/forget_password_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:hint="Email"/>

        <EditText
            android:id="@+id/forget_password_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/forget_password_email"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:hint="New password"/>

        <Button
            android:id="@+id/forget_password_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/black"
            android:drawableRight="@drawable/ic_arrow_send"/>
    </RelativeLayout>

    <Button
        android:id="@+id/for_password_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:textSize="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/forget_border"
        android:layout_marginTop="60dp"
        android:drawableLeft="@drawable/ic_arrow_back"
        android:backgroundTint="@color/red"/>

</RelativeLayout>